<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>

        <!-- specify enter and exit transitions -->
        <!-- options are: explode, slide, fade -->
        <item name="android:windowEnterTransition" tools:ignore="NewApi">
            @transition/activity_enter
        </item>
        <item name="android:windowExitTransition" tools:targetApi="lollipop">
            @transition/activity_exit
        </item>

        <item name="android:windowReenterTransition">@transition/activity_enter</item>
        <item name="android:windowReturnTransition">@transition/activity_exit</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <!-- enable overlap of transitions -->
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

