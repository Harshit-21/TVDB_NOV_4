<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_episode"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10"
    android:padding="@dimen/padding_20"
    app:cardCornerRadius="10dp"
    app:cardElevation="@dimen/elevation_10">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner">

        <FrameLayout
            android:id="@+id/fl_season"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_episodeImg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_100"
                android:scaleType="fitXY"
               />


            <TextView
                android:id="@+id/tv_episodeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5"
                android:textAllCaps="true"
                android:textSize="@dimen/text_18"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tv_episodeNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="@dimen/padding_5"
                android:textSize="@dimen/text_18"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tv_episodeAirDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:padding="@dimen/padding_5"
                android:textSize="@dimen/text_18"
                android:textStyle="bold|italic" />


        </FrameLayout>


        <TextView
            android:id="@+id/tv_EpisodeOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fl_season"
            android:padding="@dimen/padding_5" />


    </RelativeLayout>


</android.support.v7.widget.CardView>